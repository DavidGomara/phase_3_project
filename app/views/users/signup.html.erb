<h1> Want Access? Sign up</h1>

<%if @error %>
  <% @error.each do |e|%>
   <h1> <% e%> </h1>
   <%end %>
<%end %>

<%= form_for @user, url:signup_path do |f| %>

    <div>
        <%= f.label :email %>
        <%= f.text_field :email %>
    </div>
    <div>
        <%= f.label :username %>
        <%= f.text_field :username %>
    </div>
    <div>
        <%= f.label :password %>
        <%= f.password_field :password %>
    </div>
  <%= f.submit "Signup" %>
<% end %>